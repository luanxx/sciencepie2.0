           android:layout_height="50dip"
           android:id="@id/my_setting"
           android:layout_gravity="center_vertical">
           <ImageView
               style ="@style/WrapContent"
               android:id="@+id/my_setting_pic"
               android:background="@drawable/my_setting_pic"
